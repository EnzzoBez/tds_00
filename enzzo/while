// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int numero, soma = 0, contador = 0;

    do {
        printf("Digite um numero: ");
        scanf("%d", &numero);

        soma += numero;
        contador++;
    } while (soma < 500);

    printf("A soma passou de  500. %i numeros.\n", contador);

    return 0;
}
